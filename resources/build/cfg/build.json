{
  "compression": "maximum",
  "productName": "capacitance",
  "appId": "org.capacitance",
  "copyright": "MIT",
  "asar": false,
  "afterPack": "scripts/buildAfterPack.js",
  "directories": {
    "output": "out"
  },
  "extraMetadata": {
    "main": "dist/main/index.js"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "resources/build/icons/icon.ico",
    "uninstallerIcon": "resources/build/icons/unicon.ico",
    "installerHeaderIcon": "resources/build/icons/icon.ico",
    "installerSidebar": "resources/build/icons/modern-wizard.bmp",
    "uninstallerSidebar": "resources/build/icons/modern-wizard.bmp",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "capacitance",
    "include": "resources/build/cfg/installer.nsh",
    "menuCategory": false,
    "displayLanguageSelector": false
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "resources/build/icons/icon.icns"
  },
  "win": {
    "icon": "resources/build/icons/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "linux": {
    "icon": "resources/build/icons",
    "target": "AppImage",
    "executableName": "capacitance"
  },
  "npmRebuild": true,
  "publish": [
    {
      "provider": "generic",
      "url": "http://127.0.0.1:3000/public"
    }
  ],
  "extraResources": [
    {
      "from": "resources/extern",
      "to": "extern/",
      "filter": [
        "**/*"
      ]
    }
  ],
  "extraFiles": [
    {
      "from": "resources/root",
      "to": "./",
      "filter": [
        "**/*"
      ]
    }
  ],
  "files": [
    "dist/**/*",
    {
      "from": "../webdist",
      "to": "webdist/",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../resources/inside",
      "to": "inside/",
      "filter": [
        "**/*"
      ]
    }
  ]
}